<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <View
            android:id="@+id/titleMiddleGuideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/title" />

    <ImageView
            android:id="@+id/outlinedBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/credit_month_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleMiddleGuideline" />


    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:background="@drawable/credit_month_title_background"
            android:textColor="@color/creditMonthTitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1 мес" />


    <TextView
            android:id="@+id/headerSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/headerSales"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
            android:id="@+id/headerRepayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/headerRepayment"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/containerRepayment"
            app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
            android:id="@+id/headerOverpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/headerOverPayment"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/containerOverpayment"
            app:layout_constraintTop_toBottomOf="@id/title" />


    <FrameLayout
            android:id="@+id/containerSales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toStartOf="@id/containerRepayment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerSale">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/creditMonthContent"
                    android:textSize="14sp"
                    tools:text="1209505 ₸" />

            <ImageView
                    android:id="@+id/salesUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/credit_month_underline"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="@id/sales"
                    app:layout_constraintTop_toBottomOf="@id/sales" />
        </LinearLayout>


    </FrameLayout>

    <FrameLayout
            android:id="@+id/containerRepayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toStartOf="@id/containerOverpayment"
            app:layout_constraintStart_toEndOf="@+id/containerSales"
            app:layout_constraintTop_toBottomOf="@+id/headerRepayment">

        <TextView
                android:id="@+id/repayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/creditMonthContent"
                android:textSize="14sp"
                tools:text="690012 ₸" />
    </FrameLayout>

    <FrameLayout
            android:id="@+id/containerOverpayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:paddingBottom="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/containerRepayment"
            app:layout_constraintTop_toBottomOf="@+id/headerOverpayment">

        <TextView
                android:id="@+id/overpayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/creditMonthContent"
                android:textSize="14sp"
                android:maxLines="1"
                tools:text="124500 ₸" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
