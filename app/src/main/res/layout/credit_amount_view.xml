<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayout"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:hintTextAppearance="@style/HintStyle"
            android:paddingBottom="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"

            >

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/creditAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="Сумма кредита"
                android:inputType="number"
                style="@style/Body4Style">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


    <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/inputLayout"
            android:paddingBottom="1.5dp"
            android:layout_marginStart="0.7dp"
            android:layout_marginEnd="0.7dp"
            android:progressDrawable="@drawable/seekbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />
    <FrameLayout
            android:id="@+id/containerMin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@id/containerMax"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar">

        <TextView
                android:id="@+id/min"
                style="@style/Headline7Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="690012 ₸" />
    </FrameLayout>

    <FrameLayout
            android:id="@+id/containerMax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/containerMin"
            app:layout_constraintTop_toBottomOf="@+id/seekBar">

        <TextView
                android:layout_gravity="end"
                android:id="@+id/max"
                style="@style/Headline7Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="124500 ₸" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
