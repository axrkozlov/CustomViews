<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background" android:gravity="center_vertical|fill_horizontal" android:height="4dp">
        <shape android:shape="rectangle"  >
            <solid android:width="4dp"
                    android:color="@color/seekbarBackground" />
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" />
        </shape>

    </item>
    <item android:id="@android:id/progress" android:gravity="center_vertical|fill_horizontal" android:height="4dp">
        <clip>
            <shape android:shape="rectangle" >
                <solid android:width="4dp"
                        android:color="@color/seekbarProgress" />
                <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" />
            </shape>
        </clip>
    </item>
