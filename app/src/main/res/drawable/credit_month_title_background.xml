<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_active="false">
        <shape >
            <solid android:color="@color/creditMonthTitleBackground"/>
            <padding android:left="@dimen/creditMonthTitlePadding" android:right="@dimen/creditMonthTitlePadding"/>
            <corners
                    android:bottomRightRadius="@dimen/creditMonthTitleRadius"
                    android:bottomLeftRadius="@dimen/creditMonthTitleRadius"
                    android:topLeftRadius="@dimen/creditMonthTitleRadius"
                    android:topRightRadius="@dimen/creditMonthTitleRadius"/>
        </shape>
    </item>
    <item android:state_active="true">
        <shape >
            <solid android:color="@color/creditMonthTitleBackgroundActive"/>
            <padding android:left="@dimen/creditMonthTitlePadding" android:right="@dimen/creditMonthTitlePadding"/>
            <corners
                    android:bottomRightRadius="@dimen/creditMonthTitleRadius"
                    android:bottomLeftRadius="@dimen/creditMonthTitleRadius"
                    android:topLeftRadius="@dimen/creditMonthTitleRadius"
                    android:topRightRadius="@dimen/creditMonthTitleRadius"/>
        </shape>
    </item>
</selector>
