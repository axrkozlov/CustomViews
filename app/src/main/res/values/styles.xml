<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CreditInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/creditViewInputLayout</item>
        <item name="boxStrokeWidth">2dp</item>

    </style>
    <style name="CreditInputLayoutErrorStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/creditViewInputLayoutError</item>
        <item name="boxStrokeWidth">2dp</item>

    </style>

    <style name="AuthTheme.BlueOptionsMenuTheme" parent="AuthTheme">
        <item name="actionMenuTextAppearance">@style/BlueOptionsMenuTextAppearance</item>
        <item name="actionMenuTextColor">@color/kaspi_blue_link</item>
    </style>

    <style name="AuthTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/newColorPrimaryDark</item>
        <item name="colorAccent">@color/newColorAccent</item>
        <item name="colorControlHighlight">@color/white_smoke</item>

        <item name="android:windowBackground">@color/white</item>

    </style>
</resources>
